<div class="container-fluid categoryCreate">
    <h2 class="text-center">Category Section</h2>
    <form class="form center-form " action="/category/category-create" method="POST">
        <h3 class="h2 text-light text-center">Add Category</h3>
        {{#if globalError}}
        <p class="text-center global-error">{{globalError}}</p>
        {{/if}}

        <div class="d-flex justify-content-around px-2 mb-1">
            <div class="md-form form-lg col-12">
                <input type="text" id="inputLGEx" class="form-control" name="name"
                    value="{{name}}" />
                <label for="inputLGEx" class="text-light pl-4 label-text">Category Name</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-createCategory d-block mx-auto blue-gradient"><i id="spinner" class="fas fa-spinner"></i> Add</button>
        </div>
    </form>
</div>