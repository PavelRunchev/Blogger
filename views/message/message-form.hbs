<div class="container-fluid send-message">
    <h3>Send message to user or admin.</h3>
    <div class="send-message-form">
        <h2 class="text-center"><i class="fas fa-comment mr-3"></i>Send Message</h2>

         {{#if globalError}}
            <p class="text-center text-danger font-weight-bold">{{globalError}}</p>
        {{/if}}
        <form action="/message/message-send" method="POST">
            <div class="md-form">
                <input type="text" id="form1" class="form-control" name="recieverName" value="{{fields.recieverName}}">
                <label for="form1" id="label-form1">Reciever</label>
            </div>
            <div class="text-center info-text">Reciever must be email to authed user!</div>

            <div class="md-form">
                <textarea id="form2" class="md-textarea form-control" name="content" rows="3">{{fields.content}}</textarea>
                <label for="form2" id="label-form2">Content</label>
            </div>

            <div class="row d-flex justify-content-center">
                <button type="submit" class="btn-sendMessage d-block mx-auto blue-gradient"><i id="spinner" class="fas fa-spinner"></i> Send</button>
            </div>
        </form>
    </div>
    <div class="admin-online">
        <p class="font-weight-bold">Admins online: {{adminOnline}}</p>
        <p class="font-weight-bold">Name: 
            {{#each users}}
                <span class="font-italic text-warning">{{email}}, </span>
                {{else}}
                <span class="font-italic text-danger">No admins online!</span>
            {{/each}}
        </p>
    </div>
</div>