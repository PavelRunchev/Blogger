<div class="table-responsive">
    <h2 class="h2">Your Messages</h2>

    <table class="table">
        <thead class="light-blue darken-3 white-text">
        <tr class="">
            <th scope="col">#</th>
            <th scope="col" class="text-center">Date</th>
            <th scope="col" class="text-center">Sender</th>
            <th scope="col" class="text-center">Read</th>
            <th scope="col" class="text-center">Delete</th>
        </tr>
        </thead>
        <tbody>
            {{#each myMessages}}
                {{> before-delete-message}}
                <tr>
                    <th scope="row">{{index}}</th>
                    <td class="text-center font-weight-bold">{{date}}</td>
                    <td class="text-center"><span class="font-weight-bold text-warning">{{senderEmail}}</span></td>
                    <td class="text-center"><a class="nav-link text-info font-weight-bold" data-toggle="popover" data-placement="top" title="Message"
                    data-content="{{this.content}}">Reading</a></td>
                    <td class="text-center">
                        <a class="nav-link font-weight-bold btn-delete" data-toggle="modal" data-target="#modalConfirmDelete{{index}}">Delete</a>
                    </td>
                </tr>
            {{else}}
                 <tr>
                    <th scope="row" class="h6">1</th>
                    <td></td>
                    <td class="h6 text-center">No Messages!</td>
                    <td></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>