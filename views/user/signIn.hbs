<section class="signIn">
   
    <div class="signIn-box">
        <div class="row">
            <div class="col-lg-4 mx-md-auto mx-sm-auto mx-auto signIn-sec">
                <h2 class="text-center text-light">Sign In Now</h2>
                 {{#if globalError}}
                    <p class="text-center global-error">{{globalError}}</p>
                {{/if}}
                <form class="login-form" action="/user/signIn" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Email</label>
                        <input type="text" class="form-control" placeholder="Email" name="email" value="{{email}}">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Password</label>
                        <input type="password" class="form-control" placeholder="Password" name="password" value="{{password}}">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn-signIn d-block mx-auto blue-gradient"><i id="spinner" class="fas fa-spinner"></i> Sign In</button>
                    </div>
                </form>
                <p class="text-center h6 font-italic font-weight-normal text-light">Don't have an account? <a
                        class="link text-primary font-weight-bold" href="/user/signUp" data-pjax="#pjax-container">
                        <i class="fas fa-sign-in-alt mb-0 ml-2"></i></a>
                </p>
            </div>

            <div class="col-lg-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide carousel-fade " data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active "></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner " role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid "
                                src="/img/signIn1.jpg"
                                alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text w-100">
                                    <h2 class="text-center">This is Sign In form</h2>
                                    <p class="p-0 text-center">The sign in session is the period of activity between a user logging in
                                        and logging out to current software application.</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid"
                                src="/img/signIn2.jpg"
                                alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text w-100">
                                    <h2 class="text-center">This is Sign In form</h2>
                                    <p class="text-center">The sign in session is the period of activity between a
                                        user logging in and logging out to current software application.</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid"
                                src="/img/signIn3.jpg"
                                alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text w-100">
                                    <h2 class="text-center">This is Sign In form</h2>
                                    <p class="text-center">The sign in session is the period of activity between a user logging in and logging
                                        out to current software application.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
</section>